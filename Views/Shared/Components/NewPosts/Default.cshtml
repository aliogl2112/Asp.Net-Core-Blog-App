@model List<Post>

<div class="card">
    <div class="card-header">
        <h5 class="card-title mb-0">En Yeniler</h5>
    </div>
    <div class="card-body">
        @foreach(var post in Model){
            <div class="mb-3">
                <h6 class="mb-0">
                    <a asp-controller="posts" asp-action="detail" asp-route-id="@post.ID" class="btn-link fw-bold d-inline-block mb-2" style="cursor: pointer;">@post.Title</a>
                </h6>
            </div>
        }
    </div>
</div>