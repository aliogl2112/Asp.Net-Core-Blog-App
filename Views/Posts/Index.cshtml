@model PostViewModel

<div class="row">
    <div class="col-md-8">
        <div class="bg-white p-4">
            <h1 class="h4 mb-4">
                Popüler Gönderiler
            </h1>
            @foreach(var post in Model.Posts){
                <div class="card bg-trasparent border-0 mb-3">
                    <div class="row">
                        <div class="col-4">
                            <img src="~/img/@post.Image" alt="" class="img-fluid rounded">
                        </div>
                        <div class="col-8 h-100">
                            <h5>
                                <a href="/posts/@post.URL" class="btn-link fw-bold d-inline-block mb-2">@post.Title</a>
                            </h5>
                            <p>@post.Content</p>
                            <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">badge</a>
                        </div>
                    </div>
                </div>
                <hr class="my-3">
            }
            <nav>
                <ul class="pagination">
                    <li class="page-item">
                        <a href="" class="page-link">1</a>
                    </li>
                    <li class="page-item">
                        <a href="" class="page-link">2</a>
                    </li>
                    <li class="page-item">
                        <a href="" class="page-link">3</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="col-md-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>