@model Post

<div class="row">
    <div class="col-lg-8">
        <div class="bg-white p-4">
            <h1 class="mb-4">@Model.Title</h1>
            <div class="tags">
                <a href="" class="badge bg-primary bg-opacity-10 text-primary mb-2 fw-bold">Web Development</a>
                <a href="" class="badge bg-danger bg-opacity-10 text-danger mb-2 fw-bold">Backend</a>
            </div>
            <img src="~/img/@Model.Image" alt="" class="img-fluid rounded mb-3">
            <p>@Model.Content</p>
        </div>
    </div>
    <div class="col-lg-4">
        <vc:tags-menu></vc:tags-menu>
        <vc:new-posts></vc:new-posts>
    </div>
</div>